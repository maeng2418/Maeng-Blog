{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "maxNodeModuleJsDepth": 0,
    "outDir": "",
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "baseUrl": "./src",
    "paths": {
      "components/*": ["./components/*"],
      "constants": ["./constants/*"],
      "hooks/*": ["./hooks/*"],
      "layout": ["./layout/*"],
      "pages": ["./pages/*"],
      "styles": ["./styles/*"],
      "templates": ["./templates/*"],
      "utils/*": ["./utils/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.tsx"],
  "exclude": ["node_modules"]
}
